class pyConnect(object):
    """docstring for pyConnect"""
    def __init__(self, db):
        # super(pyConnect, self).__init__()
        self.db = db
        self.conn = pymongo.MongoClient(db["mongo_uri"])
        try:
            self.db = self.conn[db["db_name"]]
            if not self.db:
                print("Warning Message:未找到数据库:", db["db_name"], "。canConnect()!!")
                return "No Data"
        except Exception as e:
            traceback.print_exc()
        return False

    def __del__(self):
        self.conn.close()

    def find(self, query = {}, col_name = "user"):
        if not isinstance(query, dict):
            print("ERROR，插入的内容不是字典格式！")
            return "No Data"
        try:
            self.col = self.db[col_name]
            if not self.col:
                print("Warning Message:未找到聚集(数据表)==>>>", col_name)
                return "No Data"
            else:
                data = self.col.find(query)
                return data
        except Exception as e:
            traceback.print_exc()
        return False